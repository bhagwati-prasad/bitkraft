<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="<%= meta.description %>">
  <title><%= meta.title %></title>
  <link rel="stylesheet" href="/public/css/main.css">
</head>
<body>
  <nav class="nav">
    <div class="nav-container">
      <a href="/" class="nav-brand">BitKraft</a>
      <ul class="nav-links">
        <li><a href="/">Home</a></li>
        <li><a href="/about">About</a></li>
      </ul>
    </div>
  </nav>

  <main id="app" data-route="<%= route.path %>">
    <%- include('pages/' + route.name, { data: data }) %>
  </main>

  <script id="__BITKRAFT_STATE__" type="application/json">
    <%- JSON.stringify({ data: data, route: route }) %>
  </script>

  <script type="module">
    import BitKraftRuntime from '/public/js/runtime.js';
    
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', () => {
        const runtime = new BitKraftRuntime();
        runtime.init();
      });
    } else {
      const runtime = new BitKraftRuntime();
      runtime.init();
    }
  </script>
  
  <% features.forEach(function(feature) { %>
  <script type="module" src="/public/js/features/<%= feature %>.js"></script>
  <% }); %>
</body>
</html>
